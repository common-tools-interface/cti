#Remove previous versions of this rpm
for package in  $(rpm -qa | grep ^cray-cti-[VERSION]-)
do
  rpm -e $package
done

rpm -ivh --oldpackage cray-cti-[VERSION]-[BUILD_METADATA].[ARCH].rpm

